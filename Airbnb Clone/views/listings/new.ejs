<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
        <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" placeholder="Add a catchy title" id="title" class="form-control" required>
                <div class="invalid-feedback">Please provide a valid title</div>
                <div class="valid-feedback">Title looks good!</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="description" rows="5" id="description" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a short description</div>
                <div class="valid-feedback">Description looks good!</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image</label>
                <input type="file" name="image" class="form-control" id="image" required>
                <div class="invalid-feedback">Please upload an image</div>
                <div class="valid-feedback">Image looks good!</div>
            </div>
            <div class="mb-3">
                <label for="categories" class="form-label">Categories</label>
                <select id="categories" name="categories[]" class="form-control" multiple required>
                    <option value="Rooms">Rooms</option>
                    <option value="Iconic Cities">Iconic Cities</option>
                    <option value="Mountains">Mountains</option>
                    <option value="Castles">Castles</option>
                    <option value="Amazing Pools">Amazing Pools</option>
                    <option value="Farms">Farms</option>
                    <option value="Arctic">Arctic</option>
                    <option value="Domes">Domes</option>
                    <option value="Boats">Boats</option>
                    <option value="Historical Landmarks">Historical Landmarks</option>
                    <option value="Golfing">Golfing</option>
                    <option value="Camping">Camping</option>
                    <option value="Ski-in/out">Ski-in/out</option>
                    <option value="Beach">Beach</option>
                    <option value="Towers">Towers</option>
                </select>
                <div class="invalid-feedback">Please select at least one category</div>
                <div class="valid-feedback">Categories selected!</div>
            </div>
            <div class="row">
                <div class="mb-3 col-sm-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="price" placeholder="enter price" class="form-control" id="price" required>
                    <div class="invalid-feedback">Please enter a valid price</div>
                    <div class="valid-feedback">Price looks good!</div>
                </div>
                <div class="mb-3 col-sm-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="country" placeholder="enter country" class="form-control" id="country" required>
                    <div class="invalid-feedback">Please enter a valid country name</div>
                    <div class="valid-feedback">Country name is valid!</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="location" placeholder="enter location" class="form-control" id="location" required>
                <div class="invalid-feedback">Please enter a valid location</div>
                <div class="valid-feedback">Location is valid!</div>
            </div>
            <button class="btn btn-dark add-btn">Create</button>
            <br><br>
        </form>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('#categories').select2({
            placeholder: "Select categories",  
            allowClear: true,                 
            width: '100%'                     
        });
    });
</script>
