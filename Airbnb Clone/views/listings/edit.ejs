<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Edit the Listing</h3>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data"> 
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" value="<%= listing.title %>" id="title" class="form-control" required>
                <div class="invalid-feedback">Title should be valid</div>
                <div class="valid-feedback">Title looks good!</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="description" rows="5" id="description" class="form-control" required><%= listing.description %></textarea>
                <div class="invalid-feedback">Please enter a short description</div>
                <div class="valid-feedback">Description looks good!</div>
            </div>
            <div class="mb-3">
                Original Listing Image <br>
                <img src="<%= originalImgUrl %>">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload New Image</label>
                <input type="file" name="image" class="form-control" id="image">
            </div>
            <div class="mb-3">
                <label for="categories" class="form-label">Categories</label>
                <select id="categories" name="categories[]" class="form-control" multiple required>
                    <option value="Rooms" <%= listing.categories.includes("Rooms") ? "selected" : "" %>>Rooms</option>
                    <option value="Iconic Cities" <%= listing.categories.includes("Iconic Cities") ? "selected" : "" %>>Iconic Cities</option>
                    <option value="Mountains" <%= listing.categories.includes("Mountains") ? "selected" : "" %>>Mountains</option>
                    <option value="Castles" <%= listing.categories.includes("Castles") ? "selected" : "" %>>Castles</option>
                    <option value="Amazing Pools" <%= listing.categories.includes("Amazing Pools") ? "selected" : "" %>>Amazing Pools</option>
                    <option value="Farms" <%= listing.categories.includes("Farms") ? "selected" : "" %>>Farms</option>
                    <option value="Arctic" <%= listing.categories.includes("Arctic") ? "selected" : "" %>>Arctic</option>
                    <option value="Domes" <%= listing.categories.includes("Domes") ? "selected" : "" %>>Domes</option>
                    <option value="Boats" <%= listing.categories.includes("Boats") ? "selected" : "" %>>Boats</option>
                    <option value="Historical Landmarks" <%= listing.categories.includes("Historical Landmarks") ? "selected" : "" %>>Historical Landmarks</option>
                    <option value="Golfing" <%= listing.categories.includes("Golfing") ? "selected" : "" %>>Golfing</option>
                    <option value="Camping" <%= listing.categories.includes("Camping") ? "selected" : "" %>>Camping</option>
                    <option value="Ski-in/out" <%= listing.categories.includes("Ski-in/out") ? "selected" : "" %>>Ski-in/out</option>
                    <option value="Beach" <%= listing.categories.includes("Beach") ? "selected" : "" %>>Beach</option>
                    <option value="Towers" <%= listing.categories.includes("Towers") ? "selected" : "" %>>Towers</option>
                </select>
                <div class="invalid-feedback">Please select at least one category</div>
                <div class="valid-feedback">Categories selected!</div>
            </div>
            <div class="row">
                <div class="mb-3 col-sm-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="price" value="<%= listing.price %>" class="form-control" id="price" required>
                    <div class="invalid-feedback">Price should be valid</div>
                    <div class="valid-feedback">Price looks good!</div>
                </div>
                <div class="mb-3 col-sm-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="country" value="<%= listing.country %>" class="form-control" id="country" required>
                    <div class="invalid-feedback">Country name should be valid</div>
                    <div class="valid-feedback">Country name looks good!</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="location"  value="<%= listing.location %>" class="form-control" id="location" required>
                <div class="invalid-feedback">Location should be valid</div>
                <div class="valid-feedback">Location looks good!</div>
            </div>
            <button class="btn btn-dark add-btn">Edit</button>
            <br><br>         
        </form>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('#categories').select2({
            placeholder: "Select categories",  
            allowClear: true,                 
            width: '100%'                     
        });
    });
</script>